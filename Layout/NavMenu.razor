<button @onclick="toggleMenu">@btn</button>
<aside class="@cssClass">
    <nav>
        <ul>
            <li>
                <NavLink  href="" Match="NavLinkMatch.All">
                     Home
                </NavLink>
            </li>
            <li>
                <NavLink  href="counter">
                     Counter
                </NavLink>
            </li>
            <li>
                <NavLink  href="books">
                     Böcker
                </NavLink>
            </li>
        </ul>
    </nav>
</aside>


@code {
     private string? cssClass = "hidden";
     private string? btn = "Öppna";
    private void toggleMenu() {
        if (cssClass == "hidden") {
            cssClass = "shown";
            btn = "Stäng";
        } else {
            cssClass = "hidden";
            btn = "Öppna";
        }
    }
}
